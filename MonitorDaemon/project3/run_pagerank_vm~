#!/bin/bash
#PBS -q b534
#PBS -V
#PBS -l nodes=i96:ppn=8+i97:ppn=8
#PBS -l walltime=01:00:00
#PBS -o run_pagerank_vm$PBS_JOBID.out

# Note that we are actually sourcing (. Script) the following script to make/get the environment variables. otherwise you wonâ€™t get the $VM_NODEFILE
# environmental variable.

PAGERANK=/N/u/nfaterpe/Project4/MPI_pagerank/mpi_main
PROQUERY=mpi_main
MONITORDIR=/N/u/nfaterpe/Project4/MonitorDaemon/
DATADIR=/N/u/nfaterpe/Project4_Data/
DATAFILE=${DATADIR}project3_1M
OUTDIR=/N/u/nfaterpe/Project4_Result/
OUTURLS=${OUTDIR}topurls.txt
OUTLOG=${OUTDIR}vmlog.txt
NODEFILE=${OUTDIR}vminstances
BROKERIP=129.79.49.181
BROKERPORT=61616
PRONUM=8
ITERNUM=100
THRESH=-0.001

. /usr/local/bin/start_vms

echo "Waiting for the VM's to be reachable"
. /usr/local/bin/wait_for_vms $VM_NODEFILE
cat $VM_NODEFILE

# If you want to access the VM_NODEFILE from a shell script you first have to export it as a different 
# environmental variable.
export NODES=$VM_NODEFILE
cat $NODES
# (start your MPJ daemons and) run the MPI/MPJPagerank and monitoring applicationin VM's
# ========= 

VMIP=`cat $NODES | sed -n 1p`
echo $VMIP
#module load openmpi
cat $NODES | sort -u > ${NODEFILE}
ssh $VMIP "mpirun --mca btl_tcp_if_exclude lo,eth1 --hostfile ${NODEFILE} -np ${PRONUM} ${PAGERANK} -i ${DATAFILE} -o ${OUTURLS} -n ${ITERNUM} -t ${THRESH} > ${OUTLOG} 2>&1" &
sleep 1
for NODE in `cat ${NODEFILE}`
do
        ssh $NODE "cd ${MONITORDIR}; /N/u/taklwu/jdk1.6.0_31/bin/java -cp \"./lib/*:.\" project3/ProcCpuMem ${BROKERIP} ${BROKERPORT} ${PROQUERY}" &
done
wait
# =========
echo "shutting down VM's"
. /usr/local/bin/shutdown_vms
echo "VM Job finished"
